{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noErrorTruncation": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    // react settings
    "jsx": "react"
  },
  // for webpack/ts-loader
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["./src/**/*", "./webpack/*"]
}
